extends ../shared/template
block content
  .row
    .col-xs-12
      h2= client.email
      h5= client.aboutMe
  .row
    .col-xs-2
      #image.img.thumbnail(style='background-image:url("#{client.profilePic}")')
    .col-xs-10
  .row
    .col-xs-12
      table.table.table-striped.table-hover.table-bordered
        thead
          tr
            th Email
            th Phone
            th Visible
        body
          tr
            td= client.email
            td= client.phone
            td= client.isPublic
  .row
    .col-xs-3
    .col-xs-6
      form(role='form', method='post', action='/messages/#{client._id}')
        .form-group
          label(for='message') Send a Message to #{client.name}:
          textarea.form-control#message(name='message', autofocus=true)
        .form-group
        #formButton
        button.btn.btn-primary.btn-sm(type='submit') Send Message
    .col-xs-3

block scripts
