extends ../shared/template
block content
  .row
    .col-xs-12
      h2= client.email
  .row
    .col-xs-5
    .col-xs-2
      #image.img.thumbnail(style='background-image:url("#{client.profilePic}")')
    .col-xs-5
  .row
    .col-xs-4
    .col-xs-4
      .aboutMe
        h3 About Me
        h5= user.aboutMe
    .col-xs-4
  .row
    .col-xs-12
      table.table.table-striped.table-hover.table-bordered
        thead
          tr
            th Email
            th Phone
            th Visible
        body
          tr
            td= client.email
            td= client.phone
            td= client.isPublic
  .row
    .col-xs-3
    .col-xs-6
      form(role='form', method='post', action='/messages/:userId')
        .form-group
          label(for='message') Send a Message to #{client.name}:
          textarea.form-control#message(name='message', autofocus=true)
        .form-group
        #formButton
        button.btn.btn-primary.btn-sm(type='submit') Send Message
    .col-xs-3
  .row
    each photo in client.photos
      #image.img.thumbnail(style='background-image:url("#{client.photo}")')

block scripts
