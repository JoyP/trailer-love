extends ../shared/template
block content
  .row
    .col-xs-12
      h2: a(href='/profile/edit')= user.email
      h5= user.aboutMe
  .row
    .col-xs-2
      a.thumbnail(href='#')
        img(src=user.photo)
    .col-xs-10
  .row
    .col-xs-12
      table.table.table-striped.table-bordered
        thead
          tr
            th Email
            th Phone
            th Visible
        body
          tr
            td= user.email
            td= user.phone
            td= user.isVisible

block scripts
