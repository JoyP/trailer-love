extends ../shared/template
block content
  .row
    .col-xs-12
      h2: a(href='/profile/edit')= user.email
      h5= user.tagline
      h5= user.aboutMe
  .row
    .col-xs-2
      a.btn.btn-primary(href='/profile/edit') Edit My Profile
      #image.img.thumbnail(style='background-image:url("#{user.profilePic}")')
    .col-xs-10
  .row
    .col-xs-12
      table.table.table-striped.table-hover.table-bordered
        thead
          tr
            th Email
            th Phone
            th Visible
        body
          tr
            td= user.email
            td= user.phone
            td= user.isVisible
  .row
    each photo in user.photos
      .img.thumbnail#photo(style='background-image:url(#{photo});')

block scripts
